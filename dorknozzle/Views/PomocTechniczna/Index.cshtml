@model IEnumerable<dorknozzle.Models.PomocTechniczna>

@{
    ViewBag.Title = "Lista zgłoszeń";
    Layout = "~/Views/Shared/_LayoutDorknozzle.cshtml";
}

<h3>Lista zgłoszeń</h3>

<p>
    @Html.ActionLink("Dodaj zgłoszenie", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Podkategoria")
        </th>
        <th>
            @Html.DisplayName("Kategoria")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NunerStanowiska)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdresIp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataZgloszenia)
        </th>
