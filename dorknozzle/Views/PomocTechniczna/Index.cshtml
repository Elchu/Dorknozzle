        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NunerStanowiska)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdresIp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataZgloszenia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Opis)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id = item.PomocTechnicznaId }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.PomocTechnicznaId }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.PomocTechnicznaId })
        </td>
    </tr>
